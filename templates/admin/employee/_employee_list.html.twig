{% extends 'admin/_index_admin.html.twig' %}
{% set menu_employe = true %}
{% block content %}
    <div class="card">
        <div class="d-block w-100 text-right">
            <a href="{{ path('employee_manage') }}" class="btn btn-sm btn-primary">Hampiditra olona <i class="ti-plus"></i></a>
        </div>
        <div class="card-body">
            <ul class="list-group mt-2">
                {% for employe in employes %}
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col-md-3">{{ employe.user.firstName ~' ' ~ employe.user.lastName }}</div>
                            <div class="col-md-3">{{ employe.user.adresse }}</div>
                            <div class="col-md-3">{{ employe.user.contact }}</div>
                            <div class="col-md-3">
                                <a href="{{ path('employee_manage',{"id": employe.id|urlencrypt}) }}">Hanova <i
                                            class="ti-pencil"></i></a>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
            {{ knp_pagination_render(employes) }}
        </div>
    </div>
{% endblock %}
